<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="edu.upc.ieee.adidasnow.feature.fragments.HomeFragment"
    android:background="@color/primaryColor"
    android:paddingTop="20sp">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primaryTextColor"
        app:cardElevation="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:layout_marginVertical="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_home_image_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="10dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/adidas" />

                    <ImageView
                        android:id="@+id/fragment_home_image_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="10dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/adidas" />

                    <ImageView
                        android:id="@+id/fragment_home_image_3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="10dp"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/adidas" />

                    <View
                        android:layout_width="40sp"
                        android:layout_height="0dp"></View>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primaryDarkColor"
        app:cardElevation="10sp">

        <TextView
            android:id="@+id/fragment_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10sp"
            android:text="Sample"
            android:textColor="@color/primaryTextColor"
            android:textSize="40dp"
            android:typeface="serif" />
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/fragment_home_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm a fully developed description."
        android:textColor="@color/primaryTextColor"
        android:textSize="15dp"
        android:paddingVertical="20sp"/>

</LinearLayout>
